<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:video="clr-namespace:FormsVideoLibrary"
             x:Class="ClipBrowser.PlayLibraryVideoPage"
             Title="Play Library Video" >
    <StackLayout BackgroundColor="Black">
        <StackLayout Orientation="Horizontal" 
                     BackgroundColor="Transparent">
            <Label x:Name="videoName"
                   Margin="10"
                   BackgroundColor="Transparent"
                   TextColor="Gray"
                   HorizontalTextAlignment="Start"
                   VerticalTextAlignment="Center"
                   FontSize="Medium"
                   VerticalOptions="Center"
                   HorizontalOptions="FillAndExpand"
                   HeightRequest="40"/>
            <Button Text="选择目录"
                Margin="20"
                BackgroundColor="Transparent"
                BorderColor="Gray"
                BorderWidth="1"
                TextColor="Gray"
                HorizontalOptions="End"
                Clicked="OnSelectVideoClicked"
                HeightRequest="40"/>
        </StackLayout>
        
        <video:VideoPlayer x:Name="videoPlayer"
                           AutoLoop="True"
                           AreTransportControlsEnabled="False"
                           VerticalOptions="FillAndExpand" />
        <StackLayout Orientation="Horizontal" 
                     HorizontalOptions="End" 
                     BackgroundColor="Transparent"
                     Margin="5">
            <StackLayout Orientation="Vertical" 
                         BackgroundColor="Transparent"
                         HorizontalOptions="End"
                         VerticalOptions="Center"
                         Margin="5">
                <Label x:Name="totalNum" 
                       VerticalOptions="Center"
                       HorizontalOptions="End"
                       TextColor="Gray"
                       BackgroundColor="Transparent"
                       VerticalTextAlignment="Center"
                       HorizontalTextAlignment="End"
                       FontSize="Small"
                       HeightRequest="20"/>
                <Label x:Name="leftNum"
                       VerticalOptions="Center"
                       HorizontalOptions="End"
                       TextColor="Gray"
                       BackgroundColor="Transparent"
                       VerticalTextAlignment="Center"
                       HorizontalTextAlignment="End"
                       FontSize="Small"
                       HeightRequest="20"/>
            </StackLayout>
            <StackLayout WidthRequest="30"
                         BackgroundColor="Transparent"/>
            <Button Text="上一个"
                    Margin="10"
                    BackgroundColor="Transparent"
                    BorderColor="Gray"
                    BorderWidth="1"
                    TextColor="Gray"
                    VerticalOptions="End"
                    HorizontalOptions="Center"
                    HeightRequest="40"
                    WidthRequest="75"
                    Clicked="OnPreviousClicked"/>
            <Button Text="删除"
                    Margin="10"
                    BackgroundColor="Transparent"
                    BorderColor="Gray"
                    BorderWidth="1"
                    TextColor="Gray"
                    VerticalOptions="End"
                    HorizontalOptions="Center"
                    HeightRequest="40"
                    WidthRequest="75"
                    Clicked="OnDeleteClicked"/>
            <StackLayout Margin="10"
                         BackgroundColor="Transparent"/>
        </StackLayout>
        <StackLayout Orientation="Horizontal" 
                     HorizontalOptions="End" 
                     BackgroundColor="Transparent"
                     Margin="5" >
            <StackLayout Orientation="Vertical" 
                         BackgroundColor="Transparent"
                         HorizontalOptions="End"
                         VerticalOptions="Center"
                         Margin="5">
                <Label x:Name="deleteNum" 
                       VerticalOptions="Center"
                       HorizontalOptions="End"
                       TextColor="Gray"
                       BackgroundColor="Transparent"
                       VerticalTextAlignment="Center"
                       HorizontalTextAlignment="End"
                       FontSize="Small"
                       HeightRequest="20"/>
                <Label x:Name="markNum"
                       VerticalOptions="Center"
                       HorizontalOptions="End"
                       TextColor="Gray"
                       BackgroundColor="Transparent"
                       VerticalTextAlignment="Center"
                       HorizontalTextAlignment="End"
                       FontSize="Small"
                       HeightRequest="20"/>
            </StackLayout>
            <StackLayout WidthRequest="30"
                         BackgroundColor="Transparent"/>
            <Button Text="标记"
                    Margin="10"
                    BackgroundColor="Transparent"
                    BorderColor="Gray"
                    BorderWidth="1"
                    TextColor="Gray"
                    VerticalOptions="Start"
                    HorizontalOptions="Center"
                    HeightRequest="40"
                    WidthRequest="75"
                    Clicked="OnMarkClicked"/>
            <Button Text="下一个"
                    Margin="10"
                    BackgroundColor="Transparent"
                    BorderColor="Gray"
                    BorderWidth="1"
                    TextColor="Gray"
                    VerticalOptions="Start"
                    HorizontalOptions="Center"
                    HeightRequest="40"
                    WidthRequest="75"
                    Clicked="OnNextClicked"/>
            <StackLayout Margin="10"/>
        </StackLayout>
        <StackLayout HeightRequest="20"
                     BackgroundColor="Transparent"/>
    </StackLayout>
</ContentPage>